<div class="container p-3">
  <div class="row">
    <%= render 'admin/shared/header.html.erb' %>
    <div class="col-md-12">

      <h3><%= @member.family_name + @member.first_name %>さんの会員詳細</h3>

      <table>
        <tr>
          <td>会員ID</td>
          <td><%= @member.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @member.family_name + "　" + @member.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @member.family_name_kana + "　" + @member.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @member.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @member.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @member.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @member.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td><%= @member.is_deleted %></td>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_member_path, class: "btn btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-info" %>

    </div>
    <%= render 'admin/shared/footer.html.erb' %>
  </div>
</div>


