<div class="container p-3">
  <div class="row">
    <%= render 'admin/shared/header.html.erb' %>
    <div class="col-md-12">

      <h3>さんの会員情報編集</h3>

      <%= form_with model: @member, url: admin_member_path, method: :patch do |f| %>

      <table>
        <tr>
          <td>会員ID</td>
          <td></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :family_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :family_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_area :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td><%= f.radio_button :is_deleted, :false %><%= f.label :is_deleted, "有効", { value: :false } %></td>
          <td><%= f.radio_button :is_deleted, :true %><%= f.label :is_deleted, "退会", { value: :true } %></td>
        </tr>
      </table>

      <%= f.submit "変更を保存", class: "btn btn-success" %>

      <% end %>

    </div>
    <%= render 'admin/shared/footer.html.erb' %>
  </div>
</div>


