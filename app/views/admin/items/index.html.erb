<div class="container p-3">
  <div class="row">
    <%= render 'admin/shared/header.html.erb' %>
    <div class="col-md-12">
      <%= flash[:notice] %>
      <h3>商品一覧</h3>
        <div class="pull-right">
          <%= link_to "+", new_admin_item_path, class: 'btn btn-primary rounded-circle p-0 btn-lg', style: 'width:30px;height:30px;' %>
        </div>

        <table class="table">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税込価格(税抜価格)</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>

          </thead>

          <tbody>
            <% if @items.nil? %>
            <tr>
              <td>まだ商品は登録されていません。</td>
            </tr>
            <% else %>
              <% @items.each do |item| %>
                <tr>
                  <td><%= item.id %></td>
                  <td>
                    <%= link_to item.name, admin_item_path(item.id), class: 'link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover' %>
                  </td>
                  <td>　￥<%= item.add_tax_price.to_s(:delimited) %>(<%= item.price.to_s(:delimited) %>)</td>
                  <td><%= item.genre.name %></td>
                  <td>
                  <% if item.is_active == true %>
                    <b class="text-success">販売中</b>
                  <% else %>
                    <b class="text-secondary">販売停止中</b>
                  <% end %>
                  </td>
                </tr>
              <% end %>

            <% end %>


          </tbody>
        </table>
      <div><%= paginate @items %></div>
    </div>
  </div>
</div>

