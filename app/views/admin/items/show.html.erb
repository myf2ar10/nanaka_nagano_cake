<%= render 'admin/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row address-box">
    <div class="col-md-12 address-main-box">
      <h3 class="mt-3 mb-3 address-title">商品詳細</h3>
      <div class="row">
      <div class="col-md-3"><%= image_tag @item.image, size: "200x150", class: "object-fit-cover" %></div>

        <div class="col-md-9 admin-item-container">
              <div class="row address-box">
                <div class="col-md-3 address-label">商品名</div>
                <div class="col-md-9"><%= @item.name %></div>
              </div>
              <div class="row address-box">
                <div class="col-md-3 address-label">商品詳細</div>
                <div class="col-md-9"><%= @item.detail %></div>
              </div>
              <div class="row address-box">
                <div class="col-md-3 address-label">ジャンル</div>
                <div class="col-md-9"><%= @item.genre.name %></div>
              </div>
              <div class="row address-box">
                <div class="col-md-3 address-label">税込価格(税抜価格)</div>
                <div class="col-md-9">
                  ￥<%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)
                </div>
              </div>
              <div class="row address-box">
                <div class="col-md-3 address-label">販売ステータス</div>
                <div class="col-md-9">
                  <% if @item.is_active == true %>
                   <b class="text-success">販売中</b>
                  <% else %>
                   <b class="text-secondary">販売停止中</b>
                  <% end %>
                </div>
              </div>
        <div class="col-md-9 address-btn address-btn-right">
          <%= link_to edit_admin_item_path(@item.id) do %>
            <buttun class="btn btn-success">編集する</buttun>
          <% end %>
        </div>
        </div>

      </div>
    </div>
  </div>
</div>