<div class="container p-3">
  <div class="row">
    <%= render 'admin/shared/header.html.erb' %>
    <div class="col-md-12">

      <%= flash[:notice] %>
      <h3>商品詳細</h3>
      <div class="row">
      <div class="col-md-3"><%= image_tag @item.image, size: "200x200" %></div>

        <div class="col-md-9">
          <div class="container">
              <div class="row">
                <div class="col-md-3">商品名</div>
                <div class="col-md-9"><%= @item.name %></div>
              </div>
              <div class="row">
                <div class="col-md-3">商品詳細</div>
                <div class="col-md-9"><%= @item.detail %></div>
              </div>
              <div class="row">
                <div class="col-md-3">ジャンル</div>
                <div class="col-md-9"><%= @item.genre.name %></div>
              </div>
              <div class="row">
                <div class="col-md-3">税込価格(税抜価格)</div>
                <div class="col-md-9">
                  ￥<%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)
                </div>
              </div>
              <div class="row">
                <div class="col-md-3">販売ステータス</div>
                <div class="col-md-9">
                  <% if @item.is_active == true %>
                  <p>販売中</p>
                  <% else %>
                  <p>販売停止中</p>
                  <% end %>
                </div>
              </div>
          </div>
        <div class="col-md-9">
          <%= link_to edit_admin_item_path(@item.id) do %>
            <buttun class="btn btn-success">編集する</buttun>
          <% end %>
        </div>
        </div>
        
      </div>
    </div>
  </div>
</div>