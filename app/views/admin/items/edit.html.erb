<h3>商品編集</h3>

<%= form_with model: @item do |f| %>
<div>
  <h4>商品画像</h4>
  <%= f.file_field :image %>
</div>
<div>
  <h4>商品名</h4>
  <%= f.text_fild :name %>
</div>
<div>
  <h4>商品説明</h4>
  <%= f.text_area :detail %>
</div>
<div>
  <h4>ジャンル</h4>
  <%= f.select, :genre_id, @genre.name, {prompt:"--選択してください--"}, :class => 'form-control' %>
</div>
<div>
  <h4>税抜価格</h4>
  <%= f.text_fild :price %>
</div>
<div>
  <h4>販売ステータス</h4>
  <% f.radio_button :is_active, :true, checked: ture %>
  <% f.label :is_active, "販売中" %>
  <% f.radio_button :is_active, :false %>
  <% f.label :is_active, "販売停止中" %>
  
</div>
  <%= f.submit "変更を保存", class: "submit-btn" %>
<% end %>
 