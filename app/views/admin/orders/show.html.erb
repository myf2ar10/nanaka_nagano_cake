<%= render 'admin/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">
      <div class="col-md-12">
        <h3 class="mb-5 mt-3">注文履歴詳細</h3>
      </div>

      <div class="order-details"></div>
        <div class="col-md-2">
          <div>購入者</div>
        </div>
        <div class="col-md-2">
          <div><%= link_to @order.name, admin_member_path(@order.member_id), class: "text-dark" %></div>
        </div>
        <div class="offset-md-8"></div>

        <div class="col-md-2 mt-1">
          <div>注文日</div>
        </div>
        <div class="col-md-2">
          <div><%= @order.created_at.strftime('%Y/%m/%d') %></div>
        </div>
        <div class="offset-md-8"></div>

        <div class="col-md-2 mt-1">
          <div>配送先</div>
        </div>
        <div class="col-md-6">
          <div>
            〒<%= @order.post_code %>
            <%= @order.address %>
            <%= @order.name %>
          </div>
        </div>
        <div class="offset-md-4"></div>

        <div class="col-md-2 mt-1">
          <div>支払方法</div>
        </div>
        <div class="col-md-2">
          <div><%= @order.pay_method_i18n %></div>
        </div>
        <div class="offset-md-8"></div>

        <div class="col-md-2 mb-5 mt-1">
          <div>注文ステータス</div>
        </div>
        <div class="col-md-2">
          <div class="d-flex mt-1 align-items-center">
            <div class="mr-3 mb-0">
            <%= form_with model: @order, url: admin_order_path do |f| %>
             <%= f.select :status, Order.statuses.keys.map { |k| [I18n.t("enums.order.status.#{k}"), k]}, class: 'from-control' %>
             </div>
             <div>
             <%= f.submit "更新", class: 'btn btn-success' %>
            <% end %>
            </div>
          </div>
        </div>
        <div class="offset-md-8"></div>

    <div class="d-flex align-items-end col-md-12">
    <div class="col-md-8">
        <table class="table">
          <thead class="table-secondary">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </thead>
          <tbody>
            <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.add_tax_price.to_s(:delimited) %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= (order_detail.add_tax_price * order_detail.quantity).to_s(:delimited) %></td>
              <%= form_with model: order_detail, url: admin_order_detail_path(order_detail) do |f| %>
              <td>
                <%= f.select :making_status, OrderDetail.making_statuses.keys.map { |k| [I18n.t("enums.order_detail.making_status.#{k}"), k]}, class: 'from-control' %>
              </td>
              <td>
                <%= f.submit "更新", class: 'btn btn-success' %>
              </td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>


      <div class="col-md-3 offset-md-1">
        <table>
          <tr>
            <td><h5>商品合計</h5></td>
            <td>
              <% ary = [] %>
              <% @order_details.each do |order_detail| %>
                <%#= (order_detail.add_tax_price * order_detail.quantity).to_s(:delimited) %>
                <% ary << (order_detail.add_tax_price * order_detail.quantity) %>
              <% end %>
              <%= ary.sum.to_s(:delimited) %>円
            </td>
          </tr>
          <tr>
            <td><h5>送料</h5></td>
            <td><%= @order.shipping_fee.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <td><h5 class="mr-3">請求金額合計</h5></td>
            <td><%= @order.total_price.to_s(:delimited) %>円</td>
          </tr>
        </table>
      </div>
    </div>

  </div>
</div>
