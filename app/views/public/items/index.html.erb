<%= render 'public/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">

    <div class="col-md-3 mt-5">
      <%= render 'public/items/genre_search.html.erb' %>
    </div>

    <div class="col-md-9">
      <div class="d-flex align-items-end mb-3 mt-3">
        <h3 class="mb-0">商品一覧</h3>
        <p class="mb-0">　(全<%= Item.count %>件)</p>
      </div>
        <% if @items.nil? %>
          <h4>商品準備中です！</h4>
        <% else %>
          <div class="items d-flex flex-wrap mb-3">
            <% @items.each do |item| %>
              <div class="each-item mr-4 mt-4">
                <div>
                  <%= link_to item_path(item) do %>
                    <%= image_tag item.image, size: "180x135" %>
                  <% end %>
                </div>
                <div>
                  <%= link_to item_path(item), class: "text-dark" do %>
                    <%= item.name %>
                  <% end %>
                </div>
                <div class="text-dark">
                  ￥<%= item.add_tax_price.to_s(:delimited) %>
                  <!--(¥ <%#= item.price.to_s(:delimited) %>)-->
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

    <div><%= paginate @items %></div>
  </div>
</div>
<%= render 'public/shared/footer.html.erb' %>
