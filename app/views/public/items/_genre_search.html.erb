<div class="genre_search">
  <h3>ジャンル検索</h3>
  <table class="table table-borderless">
    <tr>
      <% if @genres.nil?%>
        <tr>
          <td>ジャンルはまだありません。</td>
        </tr>
      <% else %>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to genre.name, genre_items_search_path(genre_id: genre.id) %></td>
          </tr>
        <% end %>
      <% end %>
    </tr>
  </table>
</div>