<div class="genre_search">
  <h4 class="new-items-title-header">ジャンル検索</h4>
  <table class="table table-borderless table-hover">
    <tr>
      <% if @genres.nil?%>
        <tr>
          <td>ジャンルはまだありません。</td>
        </tr>
      <% else %>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to genre.name, genre_items_search_path(genre_id: genre.id), class: "text-dark" %></td>
          </tr>
        <% end %>
      <% end %>
    </tr>
  </table>
</div>