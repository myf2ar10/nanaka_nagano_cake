<%= render 'public/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">

    <div class="col">
      <h4>ショッピングカート</h4>

      <% if @cart_items.any? %>
      <div class="text-right mb-3">
        <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class:"btn btn-danger" %>
      </div>
      <%= flash[:notice] %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.image, size:"100x60" %><%= cart_item.item.name %></td>
            <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
            <td>
              <%= form_with model: cart_item do |f| %>
                <%= f.select :quantity, 1..10, prompt: "個数選択" %>
                <%= f.submit "変更", class:"btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="container">
        <div class="row">
          <div class="cal-md-3">
            <%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %>
          </div>
          <div class="col-md-4 offset-5">
            <table class="table table-bordered">
              <tr>
                <td>合計金額</td>
                <td><%= @total.to_s(:delimited) %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success", "data-turbolinks": false %>
      </div>
      <% else %>
      <div>
        <p>カート内に商品がありません。</p>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'public/shared/footer.html.erb' %>