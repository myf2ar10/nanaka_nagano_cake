<%= render 'public/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">
    <%= render "public/shared/error_messages", resource: @member %>

      <div class="col-md-12">
        <h3>会員情報編集</h3>
      </div>

      <div class="col-md-2">
        <p>氏名</p>
      </div>

      <div class="col-md-2">
          <%= form_with model:@member, url: members_information_path, method: :patch do |f| %>
        <p><%= f.text_field :family_name %></p>
      </div>

      <div class="col-md-2">
        <p><%= f.text_field :first_name %></p>
      </div>

      <div class="offset-md-6"></div>

      <div class="col-md-2">
        <p>フリガナ</p>
      </div>

      <div class="col-md-2">
        <p><%= f.text_field :family_name_kana %></p>
      </div>

      <div class="col-md-2">
        <p><%= f.text_field :first_name_kana %></p>
      </div>

      <div class="offset-md-6"></div>

      <div class="col-md-2">
        <p>郵便番号</p>
      </div>

      <div class="col-md-2">
        <p><%= f.text_field :post_code %></p>
      </div>

      <div class="offset-md-8"></div>

      <div class="col-md-2">
        <p>住所</p>
      </div>

      <div class="col-md-4">
        <p><%= f.text_area :address, rows: 1, class: "w-100"%></p>
      </div>

      <div class="offset-md-6"></div>

      <div class="col-md-2">
        <p>電話番号</p>
      </div>

      <div class="col-md-2">
        <p><%= f.text_field :telephone_number%></p>
      </div>

      <div class="offset-md-8"></div>

      <div class="col-md-2">
        <p>メールアドレス</p>
      </div>

      <div class="col-md-2">
        <p><%= f.email_field :email %></p>
      </div>

      <div class="offset-md-8"></div>

      <div class="col-md-4 offset-md-2">
        <div class="actions">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            <% end %>
        </div>
      </div>


      <div class="col-md-2">
        <div class="actions">
          <%= link_to "退会する", members_confirm_quit_path, class: "btn btn-danger" %>
        </div>
      </div>

      <div class="offset-md-4"></div>
  </div>
</div>
<%= render 'public/shared/footer.html.erb' %>