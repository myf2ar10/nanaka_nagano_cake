<div class="container p-3">
  <div class="row">
    <%= render 'public/shared/header.html.erb' %>
      <div class="col-md-12">

        <h2>会員情報編集</h2>

        <%= form_with model:@member, url: members_information_path, method: :patch do |f| %>
          <%= render "public/shared/error_messages", resource: @member %>

          <table>
            <tr>
              <td>名前</td>
              <td>(姓)</td>
              <td><%= f.text_field :family_name, placeholder: "令和", autofocus: true %></td>
              <td>(名) </td>
              <td><%= f.text_field :first_name, placeholder: "道子" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td>(セイ)</td>
              <td><%= f.text_field :family_name_kana, placeholder: "レイワ" %></td>
              <td>(メイ)</td>
              <td><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td></td>
              <td><%= f.email_field :email, placeholder: "sample@example.com" %></td>
            </tr>
            <tr>
              <td >郵便番号(ハイフンなし)</td>
              <td></td>
              <td><%= f.text_field :post_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td></td>
              <td colspan="3"><%= f.text_area :address, placeholder: "東京都渋谷区代々木神園0-0", style: "width:100%", rows: "1" %></td>
            </tr>
            <tr>
              <td>電話番号(ハイフンなし)</td>
              <td></td>
              <td><%= f.text_field :telephone_number, placeholder: "00000000000" %></td>
            </tr>
          </table>

          <div class="actions">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>

          <div class="actions">
            <%= link_to "退会する", members_confirm_quit_path, class: "btn btn-danger" %>
          </div>

        <% end %>


    </div>
    <%= render 'public/shared/footer.html.erb' %>
  </div>
</div>