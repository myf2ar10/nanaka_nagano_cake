<%= render 'public/shared/header.html.erb' %>

<div class="container p-3">
  <div class="row">


  <div class="col-12">

    <div class="main-visual-cover mx-auto mt-5 mb-5">
      <div class="main-visual text-light">
        <h3>ようこそ、ながのCAKEへ!</h3>
        <p>このサイトは、ケーキ販売のECサイトになります。</p>
        <p>会員でない方も商品の開覧はできますが、</p>
        <p>購入には会員登録が必要になります。</p>
      </div>
    </div>

  </div>

  <!--<div class=" col-md-3 col-md-offset-1">-->
  <!--  <%#= render 'public/items/genre_search.html.erb' %>-->
  <!--</div>-->

  <div class="col-12 col-md-3 col-lg-3 text-center">
    <%= render 'public/items/genre_search.html.erb' %>
  </div>

  <!--<div class="col-md-8">-->
  <div class="col-12 col-md-9 col-lg-9">
    <div class= "new-items-area text-center">
      <h3 class="mb-3">新着商品</h3>

      <!--<div class="new-items d-flex">-->
      <div class="new-items flex-for-more-md-top flex-wrap ">

        <% @lastest_items.each do |item| %>
        <div class="new-item mr-2">
          <p>
            <%= link_to item_path(item) do %>
              <%= image_tag item.image, size: "180x135", class: "object-fit-cover" %>
            <% end %>
          </p>
          <p>
            <%= item.name %><br>
            <%= item.price.to_s(:delimited) %>円
          </p>
        </div>
        <% end %>

      </div>
      <div class="text-right">
        <%= link_to items_path, class: "text-dark" do %>
          全ての商品を見る <i class="fas fa-caret-right fa-lg"></i>
        <% end %>
      </div>
    </div>
  <!--</div>-->
  </div>
  </div>
</div>

<%= render 'public/shared/footer.html.erb' %>


