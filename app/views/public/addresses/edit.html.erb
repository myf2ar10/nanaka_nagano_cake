<div class="container p-3">
  <div class="row">
    <%= render 'admin/shared/header.html.erb' %>
    <div class="col-md-12">
      <%= flash[:notice] %>
      <h3>配送先編集</h3>
      <table>
        <%= form_with model: @address, url: address_path(@address) do |f| %>
        <div>
          <%= f.label :post_code, '郵便番号(ハイフンなし)' %>
          <%= f.text_field :post_code, class: 'form-control' %>
        </div>
        <div>
          <%= f.label :address, '住所' %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <div>
          <%= f.label :name, '宛名' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
          <%= f.submit '変更内容を保存' %>


        <% end %>
      </table>

    </div>
    <%= render 'public/shared/footer.html.erb' %>
  </div>
</div>
