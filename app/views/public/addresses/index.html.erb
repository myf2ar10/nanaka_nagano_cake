<%= render 'admin/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
      <h3 class="mb-5 mt-3">配送先登録/一覧</h3>
      <div class="mb-5">
        <%= form_with model: @address, url: addresses_path do |f| %>
          <div class="row mt-3">
            <div class="col-3">郵便番号(ハイフンなし)</div>
            <div class="col-6">
              <%= f.text_field :post_code, class: 'form-control mb-2', placeholder: "0000000" %>
            </div>
          </div>
          <div class="row">
            <div class="col-3">住所</div>
            <div class="col-6">
              <%= f.text_field :address, class: 'form-control mb-2',placeholder: "東京都渋谷区代々木神園町0-0" %>
            </div>
          </div>
          <div class="row">
            <div class="col-3">宛名</div>
            <div class="col-3">
              <%= f.text_field :name, class: 'form-control', placeholder: "令和道子" %>
            </div>
            <div class="col-4">
              <%= f.submit "新規登録", class: 'btn btn-success' %>
            </div>
          </div>
          <% end %>
      </div>


      <table class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if @addresses.nil? %>
          <tr>
            <td>配送先が入力されていません</td>
          </tr>
        <% else %>

          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
             <%= link_to "編集する", edit_address_path(address.id), "data-turbolinks": false, class: "btn btn-success mr-1" %>
             <%= link_to "削除する", address_path(address), method: :delete, "data-cofirm" => "本当に削除しますか？", class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>

   </div>
  </div>
</div>
<%= render 'public/shared/footer.html.erb' %>