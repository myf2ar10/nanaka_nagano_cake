<%= render 'public/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">
    <div class="col">
      <h2 class="my-4">ログイン</h2>
      <h4>会員の方はこちらからログイン</h4>

      <%= form_with model: @member, url: session_path(resource_name) do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>

            <td><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class:"form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password,  class:"form-control" %></td>

          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class:"btn btn-primary" %></td>
          </tr>
        </table>
        <% end %>

      <h4>会員登録がお済みでない方</h4>
      <%= link_to "こちら", new_member_registration_path %>から新規登録を行ってください。

    </div>
  </div>
</div>
<%= render 'public/shared/footer.html.erb' %>